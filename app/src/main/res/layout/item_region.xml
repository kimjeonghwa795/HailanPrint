<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.hailan.HaiLanPrint.views.RegionPickerView.RegionAdapter.ViewHolder"/>

        <variable
            name="location"
            type="com.hailan.HaiLanPrint.greendao.Location"/>
    </data>

    <TextView
        android:id="@+id/tvRegionName"
        style="@style/NormalTextStyle"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="@{handlers::onRegionSelectAction}"
        android:paddingLeft="10dp"
        android:text="@{location.locationName}"
        android:textSize="17sp"
        tools:text="北京市"/>

</layout>
