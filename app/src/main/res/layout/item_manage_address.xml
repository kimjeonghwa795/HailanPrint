<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_150"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/text_size_16"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:src="@drawable/icon_person_place" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_6"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"
                    tools:text="郑丽" />

                <ImageView
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginLeft="@dimen/margin_80"
                    android:src="@drawable/icon_tel_place" />

                <TextView
                    android:id="@+id/tvNume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16"
                    tools:text="131553113131" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_weight="4"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:lineSpacingExtra="@dimen/margin_6"
                    android:lines="2"
                    android:paddingLeft="@dimen/margin_12"
                    android:paddingRight="@dimen/margin_12"
                    android:textSize="@dimen/text_size_16"
                    tools:text="广州市天河区快快快广州市天河区快快快快快快" />

            </LinearLayout>

            <View style="@style/DividerHorizontalStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical|right">

                <LinearLayout
                    android:id="@+id/tvEditor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:src="@drawable/icon_edit_place" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/margin_6"
                        android:text="@string/edit"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="@dimen/margin_24"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tvDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/size_24"
                        android:layout_height="@dimen/size_24"
                        android:layout_marginLeft="@dimen/margin_16"
                        android:src="@drawable/icon_delete" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/margin_12"
                        android:text="@string/delete"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>